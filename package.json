{
  "private": true,
  "name": "sapper-template",
  "description": "Sapper",
  "version": "0.0.1",
  "scripts": {
    "stories": "start-storybook",
    "build-stories": "build-storybook",
    "watch:tailwind": "postcss src/styles/tailwind.css -o static/global.css -w",
    "build:tailwind": "NODE_ENV=production postcss src/styles/tailwind.css -o static/global.css",
    "prettier:check": "node ./node_modules/prettier/bin-prettier.js --check 'src/**/*.svelte'",
    "prettier:write": "node ./node_modules/prettier/bin-prettier.js --write 'src/**/*.svelte'",
    "dev": "sapper dev",
    "dev:all": "run-p --race watch:tailwind dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:cy": "run-p --race dev cy:run",
    "test": "jest src --coverage"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.8.3",
    "compression": "^1.7.1",
    "polka": "^0.5.0",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.8.3",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^2.0.5",
    "@pyoner/svelte-ts-preprocess": "^1.2.1",
    "@rollup/plugin-alias": "^3.0.0",
    "@storybook/addon-a11y": "^5.3.8",
    "@storybook/addon-actions": "^5.3.8",
    "@storybook/addon-notes": "^5.3.8",
    "@storybook/addon-storysource": "^5.3.8",
    "@storybook/addon-viewport": "^5.3.8",
    "@storybook/preset-typescript": "^1.2.0",
    "@storybook/svelte": "^5.3.8",
    "@testing-library/jest-dom": "^5.0.2",
    "@testing-library/svelte": "^1.11.0",
    "@types/node": "^12.0.8",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "prettier": "1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript2": "0.21.0",
    "sapper": "^0.27.0",
    "svelte": "^3.12.1",
    "svelte-jester": "^1.0.3",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.3.0",
    "tailwindcss": "^1.1.4",
    "ts-jest": "^25.1.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.4.5",
    "webpack-merge": "^4.2.2"
  }
}
